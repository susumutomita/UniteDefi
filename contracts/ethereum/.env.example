# Sepolia RPC URL (get from Infura, Alchemy, etc.)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Base Sepolia RPC URL
# You can get a free RPC URL from:
# - https://www.alchemy.com/
# - https://www.infura.io/
# - https://base.org/docs/tools/rpc-providers
# Default public RPC: https://sepolia.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Private key for deployment (without 0x prefix)
# NEVER commit your actual private key!
# For testnet, you can use a dedicated test wallet
PRIVATE_KEY=your_private_key_here

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# Basescan API key for Base Sepolia contract verification
# Get your API key from https://basescan.org/
BASESCAN_API_KEY=your_basescan_api_key

# Mainnet RPC URL for forking (optional)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY